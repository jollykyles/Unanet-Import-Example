<project name="IMU-Post-Process" default="post-process" basedir=".">

   <!-- Custom processing after running exports -->
   <target name="post-process" description="Custom processing after running exports">

      <!-- Copy the output file(s) to the destination directory -->
      <echo>Copying the output files in ${run.output.dir} to D:/a/ProteQ/ProteQ/unanet_imu/data...</echo>
      <copy failonerror="false" file="${run.output.dir}/${run.exports}.csv" todir="unanet_imu/data" />
      <echo>Copy complete</echo>

      <echo>Uploading CSV file to SFTP server...</echo>
      <exec executable="python" failonerror="true">
         <arg value="../export_file.py"/>
      </exec>
      <echo>Upload complete.</echo>
      
   </target>
</project>
